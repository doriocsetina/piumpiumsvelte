# Stage 1: Build the Svelte app
FROM node:16 AS build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build

# Stage 2: Serve the built app
FROM node:16-alpine

WORKDIR /app

COPY --from=build /app/build ./build
RUN npm install -g serve

EXPOSE 5000

CMD ["serve", "-s", "build"]